<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/lightblue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Splash" parent="Base.Theme.Splash" />

    <style name="Theme.App.SplashScreen." parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lightblue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/lupina</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Splash</item>
    </style>
</resources>